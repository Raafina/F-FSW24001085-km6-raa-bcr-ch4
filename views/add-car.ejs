<div class="container-fluid py-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h3>Add New Car</h3>
      </div>
      <div class="col-md-12 p-3" style="background-color: white">
        <form>
          <div class="mb-3 row">
            <label for="staticEmail" class="col-sm-2 col-form-label"
              >Nama</label
            >
            <div class="col-sm-10">
              <input
                type="password"
                class="form-control"
                id="inputPassword"
                placeholder="Avanza"
              />
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-2 col-form-label"
              >Sewa Per Hari</label
            >
            <div class="col-sm-10">
              <input
                type="password"
                class="form-control"
                id="inputPassword"
                placeholder="Rp. 0,-"
              />
            </div>
          </div>
          <div class="mb-3 row">
            <label for="inputPassword" class="col-sm-2 col-form-label"
              >Ukuran</label
            >
            <div class="col-sm-10">
              <select class="form-select" aria-label="Default select example">
                <option value="1">Small</option>
                <option value="2">Medium</option>
                <option value="3">Large</option>
              </select>
            </div>
          </div>
          <div class="row">
            <label for="inputPassword" class="col-sm-2 col-form-label"
              >Foto</label
            >
            <div class="col-sm-10">
              <input class="form-control" type="file" id="formFile" />
              <p style="color: grey">File Size Max: 2MB</p>
            </div>
          </div>
          <div class="row">
            <div class="col-sm-10 offset-sm-2">
              <button type="submit" class="btn btn-primary mt-2">Save</button>
              <button type="submit" class="btn btn-outline-secondary mt-2">
                Cancel
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
